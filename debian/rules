#!/usr/bin/make -f

PYTHONS:=$(shell pyversions -vr)
PYTHON3S:=$(shell py3versions -vr)
DEB_RELEASE_NAME=$(shell lsb_release --codename | awk '{print $$2}')

UPSTREAM_GIT = git://github.com/racker/falcon.git
include /usr/share/openstack-pkg-tools/pkgos.make

%:
	dh $@ --buildsystem=python_distutils --with python2,python3

override_dh_auto_install:
	set -e && for pyvers in $(PYTHONS); do \
		python$$pyvers setup.py install --install-layout=deb \
			--root $(CURDIR)/debian/python-falcon; \
	done
	set -e && for pyvers in $(PYTHON3S); do \
		python$$pyvers setup.py install --install-layout=deb \
			--root $(CURDIR)/debian/python3-falcon; \
	done
	mv $(CURDIR)/debian/python3-falcon/usr/bin/falcon-bench $(CURDIR)/debian/python3-falcon/usr/bin/python3-falcon-bench

override_dh_auto_test:
ifeq (,$(findstring nocheck, $(DEB_BUILD_OPTIONS)))
	# If nose >= 1.3, run unit tests.
	set -e && if dpkg --compare-versions `dpkg -l python-nose | grep ^ii | awk '{print $$3}' | cut -d":" -f2 | cut -d- -f1` ge 1.3.0 ; then \
		nosetests ; \
		nosetests3 ; \
	else \
		echo "We need nose >= 1.3 to be able to run unit tests: skipping them" ; \
	fi
endif

override_dh_python2:
	if [ $(DEB_RELEASE_NAME) = "precise" ] ; then \
		dh_python2 ; \
	else \
		dh_python2 --shebang=/usr/bin/python ; \
	fi

override_dh_python3:
	if [ $(DEB_RELEASE_NAME) = "precise" ] ; then \
		dh_python3 ; \
	else \
		dh_python3 --shebang=/usr/bin/python3 ; \
	fi
